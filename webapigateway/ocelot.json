  "GlobalConfiguration": {
    "RateLimitOptions": {
      "DisableRateLimitHeaders": true,
      "QuotaExceededMessage": "Maximum Call Limit!",
      "HttpStatusCode": 429,
      "ClientIdHeader": "ClientId"
    },
    "ServiceDiscoveryProvider": {
      "Scheme": "http",
      "Host": "localhost",
      "Port": 8500,
      "Type": "Consul"
    },
    "BaseUrl": "http://localhost:5273"
  }
